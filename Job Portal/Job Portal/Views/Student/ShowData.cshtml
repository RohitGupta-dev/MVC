@model List<Job_Portal.context.tbl_3>
@{
    ViewBag.Title = "ShowData";

}

<h2>ShowData</h2>

<table class="table table-bordered table-hover" width="100%" >
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Rollno</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Update Student</th>
        <th>Delete Student</th>
    </tr>
    @foreach (var i in Model)
    {

<tr>
    <td>@i.id</td>
    <td>@i.name </td>
    <td>@i.rollno </td>
    <td>@i.phone </td>
    <td>@i.Email </td>
    <td>
        <a href="@Url.Action("student",new { i.id ,i.name,i.rollno,i.phone,i.Email})" class="btn btn-primary"><i class="glyphicon glyphicon-pencil" ></i> Update</a>
    </td>
    <td>

        <a href="@Url.Action("Delete", new { i.id })" class="btn btn-danger"><i class="glyphicon glyphicon-trash">Delete</i></a>
    </td>

</tr>
            }
    
</table>